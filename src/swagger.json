{
    "openapi": "3.0.0",
    "info": {
        "title": "Template - Typescript / Prisma / PostgreSQL",
        "description": "This is an Template for Node.js Project",
        "version": "1.0.0",
        "contact": {
            "email": "peixoto.pauloeduardo@gmail.com"
        }
    },
    "paths": {
        "/users": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Create a User.",
                "description": "Register an user on App.",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#definitions/CreateUser"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#definitions/UserCreated"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Invalid Parameters",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#definitions/CreateUserInvalidParameters"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#definitions/ErrorServer"
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "tags": [
                    "User"
                ],
                "summary": "Find all Users.",
                "description": "List Users Registered at App.",
                "responses": {
                    "200": {
                        "description": "List Users",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#definitions/ListUsers"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#definitions/ErrorServer"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/{email}": {
            "get": {
                "tags": [
                    "User"
                ],
                "summary": "Find an User by email address",
                "description": "Show an User by email address",
                "parameters": [
                    {
                        "name": "email",
                        "in": "path",
                        "description": "Email Address",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Show an User",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#definitions/ShowUser"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "User not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#definitions/UserNotFound"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#definitions/ErrorServer"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "CreateUser": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "username": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            },
            "example": {
                "name": "Fulano",
                "username": "fulano",
                "email": "fulano@email.com",
                "password": "123456"
            }
        },
        "UserCreated": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                },
                "user": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "string"
                        },
                        "username": {
                            "type": "string"
                        },
                        "email": {
                            "type": "string"
                        }
                    }
                }
            },
            "example": {
                "message": "User registered",
                "user": {
                    "id": "fc210d61-c64d-4067-af18-e49ad471d9d0",
                    "username": "fulano",
                    "email": "fulano@email.com"
                }
            }
        },
        "ListUsers": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "username": {
                        "type": "string"
                    }
                }
            },
            "example": [
                {
                    "id": "fc210d61-c64d-4067-af18-e49ad471d9d0",
                    "name": "Fulano",
                    "username": "fulano"
                },
                {
                    "id": "d6c7bbf6-f3a5-4aec-8a1e-e018acc8cc4f",
                    "name": "User Controller",
                    "username": "user-controller"
                }
            ]
        },
        "ShowUser": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                },
                "user": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "string"
                        },
                        "username": {
                            "type": "string"
                        },
                        "email": {
                            "type": "string"
                        }
                    }
                }
            },
            "example": {
                "message": "User found!",
                "user": {
                    "id": "fc210d61-c64d-4067-af18-e49ad471d9d0",
                    "username": "fulano",
                    "email": "fulano@email.com"
                }
            }
        },
        "UserNotFound": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                }
            },
            "example": {
                "message": "User not found!"
            }
        },
        "ErrorServer": {
            "type": "object",
            "properties": {
                "status": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                }
            },
            "example": {
                "status": "error",
                "message": "Internal server error - { description_error }"
            }
        },
        "InvalidParameters": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                }
            },
            "example": {
                "mesage": "Invalid Parameters"
            }
        },
        "InvalidEmail": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                }
            },
            "example": {
                "mesage": "Invalid Email"
            }
        },
        "InvalidPassword": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                }
            },
            "example": {
                "mesage": "Invalid Password"
            }
        },
        "InvalidName": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                }
            },
            "example": {
                "mesage": "Invalid Name"
            }
        },
        "InvalidUsername": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                }
            },
            "example": {
                "mesage": "Invalid Username"
            }
        },
        "CreateUserInvalidParameters": {
            "type": "array",
            "items": {
                "type": "object",
                "oneOf": [
                    {
                        "$ref": "#definitions/InvalidName"
                    },
                    {
                        "$ref": "#definitions/InvalidUsername"
                    },
                    {
                        "$ref": "#definitions/InvalidEmail"
                    },
                    {
                        "$ref": "#definitions/InvalidPassword"
                    },
                    {
                        "$ref": "#definitions/InvalidParameters"
                    }
                ]
            }
        }
    }
}